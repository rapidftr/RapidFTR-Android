<resources  xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="links">#0087ef</color>
    <color name="logoBackground">#31353f</color>
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="page_title">
        <item name="android:background">#30343d</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="save_btn">
        <item name="android:drawableLeft">@drawable/icon_save</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Theme.RapidFTRtheme" parent="AppTheme">
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="DropDownItem" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="Theme.RapidFTRtheme" parent="AppTheme">
        <item name="android:editTextStyle">@style/TextView</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:textColor">#333333</item>
        <item name="android:typeface">sans</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="save_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:drawableLeft">@drawable/icon_save</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="links">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="formpanel">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_android</item>
    </style>

    <style name="tab">

        <item name="android:textColor">#999999</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="tab_sel">

        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>