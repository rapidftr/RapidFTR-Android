<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>rapidftr-android</artifactId>
    <packaging>apk</packaging>
    <name>RapidFTR Client Application</name>

    <parent>
        <version>1.0</version>
        <groupId>com.rapidftr</groupId>
        <artifactId>rapidftr-android-parent</artifactId>
    </parent>

    <properties>
        <sqlcipher.dir>${project.basedir}/libs</sqlcipher.dir>
        <flurry_logging>true</flurry_logging>
    </properties>

    <dependencies>
        <dependency>
            <groupId>sqlcipher</groupId>
            <artifactId>sqlcipher</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${sqlcipher.dir}/sqlcipher.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>guava</groupId>
            <artifactId>guava</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${sqlcipher.dir}/guava-r09.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${sqlcipher.dir}/commons-codec.jar</systemPath>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>libs</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
